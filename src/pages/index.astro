---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import RecipeCard from '../components/RecipeCard.tsx';
import { validatedRecipes } from '../data/recipes';

const featuredRecipes = validatedRecipes.filter(recipe => recipe.featured).slice(0, 3);
const allRecipes = validatedRecipes.slice(0, 9); // First 9 recipes for the grid
const categories = [
  { id: 'all', name: 'All Recipes', count: validatedRecipes.length },
  { id: 'classic', name: 'Classic', count: validatedRecipes.filter(r => r.category === 'classic').length },
  { id: 'keto', name: 'Keto', count: validatedRecipes.filter(r => r.category === 'keto').length },
  { id: 'vegan', name: 'Vegan', count: validatedRecipes.filter(r => r.category === 'vegan').length },
  { id: 'nut-free', name: 'Nut-Free', count: validatedRecipes.filter(r => r.category === 'nut-free').length },
];
---

<BaseLayout 
  title="Incr-EdibleCupCakes - Extraordinary Cupcake Recipes"
  description="Discover extraordinary cupcake recipes that bring joy to every bite! From classic comfort to innovative dietary alternatives."
  image="/A vibrant, mouth-watering cupcake scene.png"
>
  <Header />
  
  <main id="main-content">
    <!-- Floating Decorative Elements -->
    <div class="fixed inset-0 pointer-events-none overflow-hidden z-0">
      <div class="absolute top-20 left-10 text-2xl animate-float-random opacity-20">ğŸ§</div>
      <div class="absolute top-40 right-20 text-xl animate-float-random opacity-15" style="animation-delay: 1s;">ğŸ°</div>
      <div class="absolute top-60 left-1/4 text-lg animate-float-random opacity-10" style="animation-delay: 2s;">ğŸ‚</div>
      <div class="absolute top-80 right-1/3 text-xl animate-float-random opacity-20" style="animation-delay: 0.5s;">ğŸ§</div>
      <div class="absolute top-96 left-16 text-lg animate-float-random opacity-15" style="animation-delay: 1.5s;">ğŸ°</div>
      <div class="absolute top-1/3 right-10 text-2xl animate-float-random opacity-10" style="animation-delay: 3s;">ğŸ‚</div>
    </div>

    <!-- Hero Section -->
    <section class="relative pt-16 lg:pt-20 pb-16 lg:pb-20 bg-gradient-to-r from-cupcake-coral via-cupcake-cherry to-sunshine-600 overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0 z-0">
        <img src="/A vibrant, mouth-watering cupcake scene.png" alt="Hero Background" class="w-full h-full object-cover opacity-30" />
        <div class="absolute inset-0 bg-gradient-to-r from-cupcake-coral/70 via-cupcake-cherry/70 to-sunshine-600/70"></div>
      </div>
      
      <!-- Floating Cupcake Icons -->
      <div class="absolute inset-0 pointer-events-none z-10">
        <div class="absolute top-20 left-20 text-3xl animate-float-random opacity-20">ğŸ§</div>
        <div class="absolute top-32 right-32 text-2xl animate-float-random opacity-15" style="animation-delay: 1s;">ğŸ°</div>
        <div class="absolute top-48 left-1/3 text-2xl animate-float-random opacity-10" style="animation-delay: 2s;">ğŸ‚</div>
        <div class="absolute top-64 right-1/4 text-3xl animate-float-random opacity-20" style="animation-delay: 0.5s;">ğŸ§</div>
        <div class="absolute bottom-32 left-24 text-2xl animate-float-random opacity-15" style="animation-delay: 1.5s;">ğŸ°</div>
        <div class="absolute bottom-20 right-20 text-2xl animate-float-random opacity-10" style="animation-delay: 3s;">ğŸ‚</div>
      </div>

      <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div class="text-center lg:text-left">
            <h1 class="text-4xl md:text-6xl lg:text-7xl font-poppins font-bold text-white mb-6 drop-shadow-lg animate-fade-in-up">
              Incr-Edible CupCakes
            </h1>
            <p class="text-xl md:text-2xl text-white/95 font-quicksand mb-8 drop-shadow-md animate-fade-in-up animation-delay-200">
              Discover extraordinary cupcake recipes that bring joy to every bite! From classic comfort to innovative dietary alternatives.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-fade-in-up animation-delay-400">
              <a
                href="/recipes"
                class="bg-white text-cupcake-coral font-bold py-3 px-8 rounded-full text-lg hover:bg-gray-100 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
              >
                Explore Recipes
              </a>
              <a
                href="/about"
                class="border-2 border-white text-white font-bold py-3 px-8 rounded-full text-lg hover:bg-white hover:text-cupcake-coral transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
              >
                My Story
              </a>
            </div>
          </div>

          <!-- Right Content - Featured Recipe Card -->
          <div class="relative animate-fade-in-up animation-delay-600">
            <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-6 shadow-2xl border border-white/20">
              <img
                src="/Classic Vanilla Dream Cupcakes.jpg"
                alt="Featured Cupcakes"
                class="w-full h-64 object-cover rounded-xl mb-4"
              />
              <div class="flex justify-between items-start mb-4">
                <div class="flex flex-col space-y-2">
                  <span class="bg-gradient-to-r from-cupcake-coral to-cupcake-cherry text-white px-3 py-1 rounded-full text-sm font-bold">
                    Classic Vanilla
                  </span>
                  <div class="flex items-center text-sunshine-400">
                    <svg class="w-4 h-4 fill-current mr-1" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                    <span class="text-sm font-medium text-gray-700">4.9</span>
                  </div>
                </div>
                <div class="flex flex-col space-y-2 text-right">
                  <span class="bg-gradient-to-r from-sunshine-400 to-sunshine-600 text-white px-3 py-1 rounded-full text-sm font-bold">
                    Keto Chocolate
                  </span>
                  <span class="text-sm text-gray-600 font-medium">30 min</span>
                </div>
              </div>
              <div class="text-center">
                <h3 class="text-lg font-poppins font-bold text-gray-900 mb-2">Featured Recipe</h3>
                <p class="text-sm text-gray-600 font-quicksand">Handpicked by our professional baker</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Creations Section -->
    <section class="py-16 lg:py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <div class="flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-sunshine-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-poppins font-bold text-gray-900">
              Featured Creations
            </h2>
          </div>
          <p class="text-lg text-gray-600 font-quicksand max-w-2xl mx-auto">
            Handpicked recipes that showcase the perfect blend of innovation and deliciousness.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredRecipes.map((recipe) => (
            <RecipeCard recipe={recipe} client:load />
          ))}
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="py-16 lg:py-20 bg-gradient-to-r from-cupcake-coral to-cupcake-cherry">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          <div class="text-center text-white">
            <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-6 shadow-lg">
              <svg class="w-12 h-12 mx-auto mb-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <div class="text-3xl font-bold font-poppins mb-2">50+</div>
              <div class="text-sm font-quicksand opacity-90">Unique Recipes</div>
            </div>
          </div>
          <div class="text-center text-white">
            <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-6 shadow-lg">
              <svg class="w-12 h-12 mx-auto mb-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
              <div class="text-3xl font-bold font-poppins mb-2">10K+</div>
              <div class="text-sm font-quicksand opacity-90">Happy Bakers</div>
            </div>
          </div>
          <div class="text-center text-white">
            <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-6 shadow-lg">
              <svg class="w-12 h-12 mx-auto mb-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              <div class="text-3xl font-bold font-poppins mb-2">4.9</div>
              <div class="text-sm font-quicksand opacity-90">Average Rating</div>
            </div>
          </div>
          <div class="text-center text-white">
            <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-6 shadow-lg">
              <svg class="w-12 h-12 mx-auto mb-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              <div class="text-3xl font-bold font-poppins mb-2">25K+</div>
              <div class="text-sm font-quicksand opacity-90">Community Members</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Recipe Collection Section -->
    <section class="py-16 lg:py-24 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <div class="flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-poppins font-bold text-gray-900">
              Recipe Collection
            </h2>
          </div>
          <p class="text-lg text-gray-600 font-quicksand max-w-2xl mx-auto">
            Every cupcake tells a story. Explore our complete collection of carefully crafted recipes.
          </p>
        </div>

        <!-- Filter Buttons -->
        <div class="flex flex-wrap justify-center gap-4 mb-12">
          {categories.map((category) => (
            <button
              class={`px-6 py-3 rounded-full font-quicksand font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg ${
                category.id === 'all'
                  ? 'bg-gradient-to-r from-cupcake-coral to-cupcake-cherry text-white shadow-lg'
                  : 'bg-gray-100 text-gray-700 hover:bg-cupcake-pink/20 hover:text-cupcake-coral'
              }`}
            >
              {category.name} ({category.count})
            </button>
          ))}
        </div>

        <!-- Recipe Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {allRecipes.map((recipe) => (
            <RecipeCard recipe={recipe} client:load />
          ))}
        </div>
      </div>
    </section>

    <!-- Ready to Start Baking Section -->
    <section class="py-16 lg:py-20 bg-gradient-to-r from-cupcake-coral to-cupcake-cherry relative overflow-hidden">
      <!-- Floating Cupcake Icons -->
      <div class="absolute inset-0 pointer-events-none">
        <div class="absolute top-10 left-10 text-2xl animate-float-random opacity-20">ğŸ§</div>
        <div class="absolute top-20 right-20 text-xl animate-float-random opacity-15" style="animation-delay: 1s;">ğŸ°</div>
        <div class="absolute bottom-20 left-1/4 text-lg animate-float-random opacity-10" style="animation-delay: 2s;">ğŸ‚</div>
        <div class="absolute bottom-10 right-1/3 text-xl animate-float-random opacity-20" style="animation-delay: 0.5s;">ğŸ§</div>
      </div>

      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="flex items-center justify-center mb-6">
          <svg class="w-12 h-12 text-white mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-poppins font-bold text-white">
            Ready to Start Baking?
          </h2>
        </div>
        <p class="text-xl text-white/95 font-quicksand max-w-3xl mx-auto mb-8">
          Join thousands of bakers who have transformed their kitchens with our incredible recipes.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/about"
            class="border-2 border-white text-white font-bold py-3 px-8 rounded-full text-lg hover:bg-white hover:text-cupcake-coral transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
          >
            Learn About Me
          </a>
          <a
            href="/contact"
            class="bg-white text-cupcake-coral font-bold py-3 px-8 rounded-full text-lg hover:bg-gray-100 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
          >
            Get In Touch
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>