---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="Contact Us - Incr-EdibleCupCakes"
  description="Get in touch with Sarah and the Incr-EdibleCupCakes team. We'd love to hear from you and help with any baking questions or recipe feedback."
  canonical="https://incr-ediblecupcakes.com/contact"
>
  <Header />
  
  <main id="main-content" class="pt-16 lg:pt-20">
    <!-- Hero Section -->
    <section class="py-12 lg:py-16 bg-gradient-to-br from-cupcake-coral/10 via-sunshine-400/10 to-cupcake-cherry/10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-poppins font-bold text-gray-900 mb-4">
            Contact Us
          </h1>
          <p class="text-lg text-gray-600 font-quicksand max-w-2xl mx-auto">
            We'd love to hear from you! Whether you have questions about our recipes, 
            want to share your baking success, or just want to say hello.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Form & Info -->
    <section class="py-16 lg:py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="bg-white rounded-2xl shadow-lg p-8">
            <h2 class="text-2xl font-poppins font-bold text-gray-900 mb-6">Send us a Message</h2>
            <form class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2 font-quicksand">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-cupcake-coral focus:border-transparent font-quicksand"
                  placeholder="Your name"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2 font-quicksand">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-cupcake-coral focus:border-transparent font-quicksand"
                  placeholder="your@email.com"
                />
              </div>
              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-2 font-quicksand">Subject</label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-cupcake-coral focus:border-transparent font-quicksand"
                >
                  <option value="">Select a subject</option>
                  <option value="recipe-question">Recipe Question</option>
                  <option value="baking-tip">Baking Tip Request</option>
                  <option value="feedback">Recipe Feedback</option>
                  <option value="collaboration">Collaboration</option>
                  <option value="other">Other</option>
                </select>
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2 font-quicksand">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-cupcake-coral focus:border-transparent font-quicksand"
                  placeholder="Tell us what's on your mind..."
                ></textarea>
              </div>
              <button
                type="submit"
                class="w-full bg-gradient-to-r from-cupcake-coral to-cupcake-cherry text-white px-8 py-4 rounded-2xl font-quicksand font-bold text-lg hover:from-cupcake-cherry hover:to-cupcake-coral transition-all duration-300 transform hover:scale-105 shadow-xl hover:shadow-2xl"
              >
                Send Message
              </button>
            </form>
          </div>

          <!-- Contact Information -->
          <div class="space-y-8">
            <div class="bg-white rounded-2xl shadow-lg p-8">
              <h2 class="text-2xl font-poppins font-bold text-gray-900 mb-6">Get in Touch</h2>
              <div class="space-y-6">
                <div class="flex items-start space-x-4">
                  <div class="bg-gradient-to-r from-cupcake-coral to-cupcake-cherry text-white w-12 h-12 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 font-quicksand">Email</h3>
                    <p class="text-gray-600 font-quicksand">sarah@incr-ediblecupcakes.com</p>
                    <p class="text-sm text-gray-500 font-quicksand">We typically respond within 24 hours</p>
                  </div>
                </div>

                <div class="flex items-start space-x-4">
                  <div class="bg-gradient-to-r from-sunshine-400 to-sunshine-600 text-white w-12 h-12 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 font-quicksand">Phone</h3>
                    <p class="text-gray-600 font-quicksand">+1-555-123-CAKE</p>
                    <p class="text-sm text-gray-500 font-quicksand">Monday - Friday, 9 AM - 5 PM PST</p>
                  </div>
                </div>

                <div class="flex items-start space-x-4">
                  <div class="bg-gradient-to-r from-green-400 to-green-600 text-white w-12 h-12 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 font-quicksand">Location</h3>
                    <p class="text-gray-600 font-quicksand">Portland, Oregon</p>
                    <p class="text-sm text-gray-500 font-quicksand">United States</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Social Media -->
            <div class="bg-white rounded-2xl shadow-lg p-8">
              <h2 class="text-2xl font-poppins font-bold text-gray-900 mb-6">Follow Us</h2>
              <div class="flex space-x-4">
                <a href="https://instagram.com/incrediblecupcakes" class="bg-gradient-to-r from-pink-500 to-purple-600 text-white w-12 h-12 rounded-full flex items-center justify-center hover:scale-110 transition-transform duration-300" aria-label="Instagram">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.418-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.928.875 1.418 2.026 1.418 3.323s-.49 2.448-1.418 3.244c-.875.807-2.026 1.297-3.323 1.297zm7.83-9.781h-1.594c-.807 0-1.418.611-1.418 1.418s.611 1.418 1.418 1.418h1.594c.807 0 1.418-.611 1.418-1.418s-.611-1.418-1.418-1.418z"/>
                  </svg>
                </a>
                <a href="https://facebook.com/incrediblecupcakes" class="bg-gradient-to-r from-blue-500 to-blue-700 text-white w-12 h-12 rounded-full flex items-center justify-center hover:scale-110 transition-transform duration-300" aria-label="Facebook">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
