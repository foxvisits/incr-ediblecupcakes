---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { validatedRecipes } from '../../data/recipes';

export function getStaticPaths() {
  return validatedRecipes.map((recipe) => ({
    params: { slug: recipe.slug },
    props: { recipe },
  }));
}

const { recipe } = Astro.props;

const getCategoryColor = (category: string) => {
  const colors = {
    classic: 'bg-blue-100 text-blue-800',
    keto: 'bg-green-100 text-green-800',
    vegan: 'bg-emerald-100 text-emerald-800',
    'nut-free': 'bg-amber-100 text-amber-800',
    'gluten-free': 'bg-purple-100 text-purple-800',
  };
  return colors[category as keyof typeof colors] || 'bg-gray-100 text-gray-800';
};
---

<BaseLayout 
  title={`${recipe.title} - Incr-EdibleCupCakes`}
  description={recipe.shortDescription}
  image={recipe.image}
  canonical={`https://incr-ediblecupcakes.com/recipe/${recipe.slug}`}
>
  <Header />
  
  <main id="main-content" class="pt-16 lg:pt-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <div class="flex items-center space-x-2 text-sm text-gray-500 font-quicksand">
          <a href="/" class="hover:text-cupcake-coral transition-colors duration-300">Home</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <a href="/recipes" class="hover:text-cupcake-coral transition-colors duration-300">Recipes</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-gray-900">{recipe.title}</span>
        </div>
      </nav>

      <!-- Recipe Header -->
      <div class="mb-12">
        <div class="flex flex-col lg:flex-row gap-8">
          <!-- Recipe Image -->
          <div class="lg:w-1/2">
            <img
              src={recipe.image}
              alt={recipe.title}
              class="w-full h-64 lg:h-96 object-cover rounded-2xl shadow-2xl"
            />
          </div>

          <!-- Recipe Info -->
          <div class="lg:w-1/2">
            <div class="flex items-center space-x-3 mb-4">
              <span class={`px-3 py-1 rounded-full text-sm font-semibold font-quicksand ${getCategoryColor(recipe.category)}`}>
                {recipe.category.replace('-', ' ').toUpperCase()}
              </span>
              <div class="flex items-center space-x-1">
                <svg class="w-5 h-5 text-sunshine-400 fill-sunshine-400" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                <span class="text-lg font-semibold text-gray-700">{recipe.rating}</span>
              </div>
            </div>

            <h1 class="text-3xl md:text-4xl font-poppins font-bold text-gray-900 mb-4">
              {recipe.title}
            </h1>

            <p class="text-lg text-gray-600 font-quicksand mb-6">
              {recipe.description}
            </p>

            <!-- Recipe Stats -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
              <div class="bg-white rounded-xl p-4 shadow-lg text-center">
                <svg class="w-6 h-6 text-cupcake-coral mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div class="text-sm text-gray-500 font-quicksand">Prep Time</div>
                <div class="font-semibold text-gray-900">{recipe.prepTime}</div>
              </div>
              <div class="bg-white rounded-xl p-4 shadow-lg text-center">
                <svg class="w-6 h-6 text-cupcake-coral mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div class="text-sm text-gray-500 font-quicksand">Cook Time</div>
                <div class="font-semibold text-gray-900">{recipe.cookTime}</div>
              </div>
              <div class="bg-white rounded-xl p-4 shadow-lg text-center">
                <svg class="w-6 h-6 text-cupcake-coral mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <div class="text-sm text-gray-500 font-quicksand">Servings</div>
                <div class="font-semibold text-gray-900">{recipe.servings}</div>
              </div>
              <div class="bg-white rounded-xl p-4 shadow-lg text-center">
                <div class="text-sm text-gray-500 font-quicksand">Difficulty</div>
                <div class={`font-semibold ${
                  recipe.difficulty === 'Easy' ? 'text-green-600' :
                  recipe.difficulty === 'Medium' ? 'text-yellow-600' :
                  'text-red-600'
                }`}>
                  {recipe.difficulty}
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <button class="bg-gradient-to-r from-cupcake-coral to-cupcake-cherry text-white px-8 py-4 rounded-2xl font-quicksand font-bold text-lg hover:from-cupcake-cherry hover:to-cupcake-coral transition-all duration-300 transform hover:scale-105 shadow-xl hover:shadow-2xl">
                Save Recipe
              </button>
              <button class="border-2 border-cupcake-coral text-cupcake-coral px-8 py-4 rounded-2xl font-quicksand font-bold text-lg hover:bg-cupcake-coral hover:text-white transition-all duration-300 transform hover:scale-105">
                Share Recipe
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Recipe Content -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Ingredients -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-2xl shadow-lg p-6 sticky top-8">
            <h2 class="text-2xl font-poppins font-bold text-gray-900 mb-6">Ingredients</h2>
            <ul class="space-y-3">
              {recipe.ingredients.map((ingredient) => (
                <li class="flex items-start space-x-3">
                  <div class="w-2 h-2 bg-cupcake-coral rounded-full mt-2 flex-shrink-0"></div>
                  <span class="text-gray-700 font-quicksand">{ingredient}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <!-- Instructions -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-2xl shadow-lg p-8">
            <h2 class="text-2xl font-poppins font-bold text-gray-900 mb-6">Instructions</h2>
            <ol class="space-y-6">
              {recipe.instructions.map((instruction, index) => (
                <li class="flex items-start space-x-4">
                  <div class="bg-gradient-to-r from-cupcake-coral to-cupcake-cherry text-white w-8 h-8 rounded-full flex items-center justify-center font-bold text-sm flex-shrink-0">
                    {index + 1}
                  </div>
                  <p class="text-gray-700 font-quicksand leading-relaxed">{instruction}</p>
                </li>
              ))}
            </ol>
          </div>
        </div>
      </div>

      <!-- Nutrition Info -->
      {recipe.nutritionInfo && (
        <div class="mt-12 bg-white rounded-2xl shadow-lg p-8">
          <h2 class="text-2xl font-poppins font-bold text-gray-900 mb-6">Nutrition Information</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
            <div class="text-center">
              <div class="text-2xl font-bold text-cupcake-coral">{recipe.nutritionInfo.calories}</div>
              <div class="text-sm text-gray-500 font-quicksand">Calories</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-cupcake-coral">{recipe.nutritionInfo.carbs}g</div>
              <div class="text-sm text-gray-500 font-quicksand">Carbs</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-cupcake-coral">{recipe.nutritionInfo.protein}g</div>
              <div class="text-sm text-gray-500 font-quicksand">Protein</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-cupcake-coral">{recipe.nutritionInfo.fat}g</div>
              <div class="text-sm text-gray-500 font-quicksand">Fat</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-cupcake-coral">{recipe.nutritionInfo.fiber}g</div>
              <div class="text-sm text-gray-500 font-quicksand">Fiber</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-cupcake-coral">{recipe.nutritionInfo.sugar}g</div>
              <div class="text-sm text-gray-500 font-quicksand">Sugar</div>
            </div>
          </div>
        </div>
      )}

      <!-- FAQ Section -->
      {recipe.faq && recipe.faq.length > 0 && (
        <div class="mt-12 bg-white rounded-2xl shadow-lg p-8">
          <h2 class="text-2xl font-poppins font-bold text-gray-900 mb-6">Frequently Asked Questions</h2>
          <div class="space-y-4">
            {recipe.faq.map((faq) => (
              <div class="border border-gray-200 rounded-xl p-4">
                <h3 class="font-semibold text-gray-900 mb-2 font-quicksand">{faq.question}</h3>
                <p class="text-gray-600 font-quicksand">{faq.answer}</p>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </main>

  <Footer />
</BaseLayout>
