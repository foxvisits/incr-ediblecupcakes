---
import Logo from './Logo.astro';
---

<header class="fixed w-full z-50 transition-all duration-300 bg-white/95 backdrop-blur-xl shadow-2xl border-b border-cupcake-pink/30">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <a href="/" class="flex items-center space-x-3 group">
        <Logo />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a
          href="/"
          class="relative font-quicksand font-bold transition-all duration-300 hover:scale-105 text-shadow-sm text-cupcake-coral shadow-rose-200"
        >
          Home
          <span class="absolute -bottom-1 left-0 w-full h-0.5 bg-gradient-to-r from-cupcake-coral to-sunshine-400 rounded-full animate-pulse-glow" />
        </a>
        <a
          href="/recipes"
          class="relative font-quicksand font-bold transition-all duration-300 hover:scale-105 text-shadow-sm text-gray-700 hover:text-cupcake-coral"
        >
          Recipes
        </a>
        <a
          href="/about"
          class="relative font-quicksand font-bold transition-all duration-300 hover:scale-105 text-shadow-sm text-gray-700 hover:text-cupcake-coral"
        >
          About
        </a>
        <a
          href="/contact"
          class="relative font-quicksand font-bold transition-all duration-300 hover:scale-105 text-shadow-sm text-gray-700 hover:text-cupcake-coral"
        >
          Contact
        </a>
        <svg class="w-5 h-5 transition-colors duration-300 animate-pulse text-sunshine-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3l14 9-14 9V3z" />
        </svg>
      </nav>

      <!-- Mobile Menu Button -->
      <button
        class="md:hidden p-2 rounded-md text-gray-700 hover:text-cupcake-coral hover:bg-cupcake-pink/20 transition-colors duration-300"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white/95 backdrop-blur-xl rounded-lg shadow-lg mt-2">
        <a
          href="/"
          class="block px-3 py-2 rounded-md text-base font-medium text-cupcake-coral bg-cupcake-pink/10"
        >
          Home
        </a>
        <a
          href="/recipes"
          class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-cupcake-coral hover:bg-cupcake-pink/10 transition-colors duration-300"
        >
          Recipes
        </a>
        <a
          href="/about"
          class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-cupcake-coral hover:bg-cupcake-pink/10 transition-colors duration-300"
        >
          About
        </a>
        <a
          href="/contact"
          class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-cupcake-coral hover:bg-cupcake-pink/10 transition-colors duration-300"
        >
          Contact
        </a>
      </div>
    </div>
  </div>
</header>
