      </p>
    </div>
  </div>
</footer>

<script>
  // Add floating decorations to footer
  function addFooterDecorations() {
    const decorationsContainer = document.getElementById('footer-decorations');
    if (!decorationsContainer) return;

    // Clear existing decorations
    decorationsContainer.innerHTML = '';

    // Add floating decorations
    for (let i = 0; i < 15; i++) {
      const decoration = document.createElement('div');
      decoration.className = 'absolute animate-float-random opacity-10';
      decoration.style.left = `${Math.random() * 100}%`;
      decoration.style.top = `${Math.random() * 100}%`;
      decoration.style.animationDelay = `${i * 0.5}s`;
      decoration.style.animationDuration = `${8 + Math.random() * 4}s`;
      
      const emoji = i % 3 === 0 ? '🧁' : i % 3 === 1 ? '🍰' : '🎂';
      decoration.textContent = emoji;
      
      decorationsContainer.appendChild(decoration);
    }
  }

  // Initialize decorations when DOM is loaded
  document.addEventListener('DOMContentLoaded', addFooterDecorations);
</script>